<UserControl x:Class="ChatApp.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 0, 0, 5">
                    <TextBlock Text="IP Address: "/>
                    <TextBox Text="{Binding IP}" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 0, 0, 5">
                    <TextBlock Text="Port: "/>
                    <TextBox Text="{Binding Port}" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 0, 0, 5">
                    <TextBlock Text="Username: "/>
                    <TextBox Text="{Binding Username}" Width="100"/>
                </StackPanel>
                <Button Content="Connect" Command="{Binding ServerConnectCommand}"/>
                <TextBlock Text="{Binding FeedbackMessage}" Margin="0, 5, 0, 0" Width="150" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height=".9*"/>
                <RowDefinition Height=".1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ScrollViewer Name="ScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" CanContentScroll="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ListView Name="Chat" ItemsSource="{Binding ServerMessages}" IsEnabled="False" BorderThickness="0" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Width="360" Margin="0,0,20,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}: {1}">
                                            <Binding Path="Sender"/>
                                            <Binding Path="Message"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
            <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal">
                <Button Margin="5, 5, 5, 5" Width="50" Height="25" Content="Send" Command="{Binding SendMessageCommand}"/>
                <TextBox Name="MessageTextBox" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Height="20" Width="325" HorizontalAlignment="Center" TextWrapping="Wrap">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
            </StackPanel>
        </Grid>
        
    </Grid>
</UserControl>
